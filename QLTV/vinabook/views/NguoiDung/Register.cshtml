                <fieldset>
                    <h2>REGISTER TO <span class="red"><strong>VINABOOK</strong></span></h2>
                    <h4 class="red">@ViewBag.thanhcong</h4>
                    @*@Html.ValidationSummary(true, "", new { @class = "text-danger red" })*@
                    <div class="form-group">
                        @Html.LabelFor(model => model.HoTen, new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            <input type="text" value="" name="HoTen" id="HoTen" size="25" class="required form-control" placeholder="Họ và tên..." autofocus/>
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.NgaySinh, new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            <input type="date" class="form-control required" id="NgaySinh" name="NgaySinh" >
                        </div>
                        <span id="loiNgaySinh"></span>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.GioiTinh, new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            <select class="selectpicker show-tick" name="GioiTinh" id="GioiTinh">
                                <option value="Nam">Nam</option>
                                <option value="Nữ">Nữ</option>
                            </select>
                        </div>
                     </div>


                        <div class="form-group">
                            @Html.LabelFor(model => model.DienThoai, new { @class = "control-label col-md-2" })
                            <div class="col-md-10">
                                <input type="number" value="" name="DienThoai" id="DienThoai" size="25" class="required form-control" placeholder="Điện thoại..." />
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.TaiKhoan, new { @class = "control-label col-md-2" })
                            <div class="col-md-10">
                                <input @*onkeypress="KiemTra()"*@ type="text" value="" name="TaiKhoan" id="TaiKhoan" size="25" class="required form-control" placeholder="Tài khoản..." />
                                @Html.ValidationMessageFor(model => model.TaiKhoan, "", new { @class = "text-danger" })
                            </div>
                            <h4 class="red">@ViewBag.thongbao</h4>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.MatKhau, new { @class = "control-label col-md-2" })
                            <div class="col-md-10">
                                <input type="password" value="" name="MatKhau" id="MatKhau" size="25" class="required form-control" placeholder="Mật khẩu..." />
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="password" class="control-label col-md-3">Nhập lại mật khẩu :</label>
                            <div class="col-md-6">
                                <input  type="password" value="" name="cpassword" id="cpassword" size="25"  class="form-control" placeholder="Nhập lại mật khẩu..." />
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.Email, new { @class = "control-label col-md-2" })
                            <div class="col-md-10">
                                <input type="email" value="" name="Email" id="Email" size="25" class="required form-control"  placeholder="Email..." />
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.DiaChi, new { @class = "control-label col-md-2" })
                            <div class="col-md-10">
                                <input type="text" value="" name="DiaChi" id="DiaChi" size="25" class="required form-control" placeholder="Địa chỉ..." />
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-md-offset-2 col-md-10 ">
                                    <input id="btnSubmit" type="submit" value="Đăng ký" class="btn btn-group-vertical" />
                            </div>
                        </div>
                    <br />
                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input onclick="window.location.href='/NguoiDung/Login'" type="button" value="Đăng nhập" class="btn btn-group-vertical success" />
                        </div>
                    </div>

                </fieldset>
            </form>
            
}

