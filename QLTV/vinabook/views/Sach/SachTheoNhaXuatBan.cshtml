@using Vinabook.Models
@using PagedList.Mvc
@model PagedList.PagedList<Vinabook.Models.Sach>

@{
    ViewBag.Title = "SachTheoNhaXuatBan";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}



<div class="single-product-area">
    <div class="zigzag-bottom"></div>
    <div class="container">
        <div class="row">
            <div class="col-md-3">
             

                @Html.Action("DanhMucNhaXuatBanPartial","NhaXuatBan")
            </div>

            <div class="col-md-9" >
                <div class="product-content-right">
                    <div class="product-breadcroumb">
                        <a href="@Url.Content("/Home/Index/")">Trang Chủ</a>
                        <a href="">@ViewBag.NhaXuatBan</a>
                        @*<a href="">@Model.TenSach</a>*@
                    </div>

                    @Html.Partial("_Partial_1_Sach", Model)                
    @*@Html.Action("SachGanDayPartial", "Sach")*@

                </div>
             
                    <div class="col-md-12">
                        <div class="product-pagination text-center">
                           
                            @* Tạo link liên kết các trang*@
                            Trang @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber)/ @Model.PageCount
                            <div class="MenuTrang">
                                @Html.PagedListPager(Model, page => Url.Action("Sach", new { page = page }))
                            </div>
                        </div>
                    </div>
             


            </div>
        </div>
    </div>
</div>



<style>
    .MenuTrang li {
        display: inline;
    }
</style>
