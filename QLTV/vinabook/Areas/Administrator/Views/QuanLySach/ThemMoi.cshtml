@model Vinabook.Models.Sach
@{
    ViewBag.Title = "ThemMoi";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<h2>Thêm mới</h2>
@*Thêm thuộc tính cho form để upload ảnh*@
@using (Html.BeginForm("ThemMoi", "QuanLySach", FormMethod.Post, new { @enctype = "multipart/form-data", @id = "input_form" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        @Html.ValidationSummary(true)
        <div class="form-group">
            <span class="control-label col-md-3"><strong>Tên sách(*)</strong></span>
            <div class="col-md-6">
                @Html.EditorFor(model => model.TenSach, new { htmlAttributes = new { @class = "required form-control" } })
                @Html.ValidationMessageFor(model => model.TenSach)
            </div>
        </div>
        <div class="form-group">
            <span class="control-label col-md-3"><strong>Kệ Sách(*)</strong></span>
            <div class="col-md-6">

                @{if (ViewBag.KeSach == 1)
                    {
                        <input type="radio" name="KeSach" id="KeSach" value="A1" checked /><span>A1</span>
                        <input type="radio" name="KeSach" id="KeSach" value="A2" checked /><span>A2</span>
                        <input type="radio" name="KeSach" id="KeSach" value="A3" checked /><span>A3</span><br />
                        <input type="radio" name="KeSach" id="KeSach" value="B1" /><span>B1</span>
                        <input type="radio" name="KeSach" id="KeSach" value="B2" /><span>B2</span><br />
                        <input type="radio" name="KeSach" id="KeSach" value="C1" /><span>C1</span>
                        <input type="radio" name="KeSach" id="KeSach" value="C2" /><span>C2</span>
                    }
                    else
                    {
                        <input type="radio" name="KeSach" id="KeSach" value="A1" checked /><span>A1</span>
                        <input type="radio" name="KeSach" id="KeSach" value="A2" checked /><span>A2</span>
                        <input type="radio" name="KeSach" id="KeSach" value="A3" checked /><span>A3</span><br />
                        <input type="radio" name="KeSach" id="KeSach" value="B1" /><span>B1</span>
                        <input type="radio" name="KeSach" id="KeSach" value="B2" /><span>B2</span><br />
                        <input type="radio" name="KeSach" id="KeSach" value="C1" /><span>C1</span>
                        <input type="radio" name="KeSach" id="KeSach" value="C2" /><span>C2</span>
                    }
                }
            </div>
        </div>

        <div class="form-group">
            <span class="control-label col-md-3"><strong>Ngày cập nhật(*)</strong></span>
            <div class="col-md-6">
                @Html.EditorFor(model => model.NgayCapNhat, new { htmlAttributes = new { @class = "required form-control" } })
                @Html.ValidationMessageFor(model => model.NgayCapNhat)
            </div>
        </div>
        <div class="form-group">
            <span class="control-label col-md-3"><strong>Ảnh bìa(*)</strong></span>
            <div class="col-md-6">
                <div class="fileinput fileinput-new" data-provides="fileinput" style="height:150px">
                    <div class="fileinput-preview thumbnail" data-trigger="fileinput" style="width: 200px; height: 150px"></div>
                    <div class="pull-right" style="margin-left:5px;">
                        <span class="btn btn-default btn-file">
                            <span class="fileinput-new">Chọn ảnh</span>
                            <span class="fileinput-exists">
                                Thay đổi
                            </span>
                            <input id="fileUpload" type="file" name="fileUpload">
                        </span>
                        <a href="#" class="btn btn-default fileinput-exists" data-dismiss="fileinput">Xóa</a>

                    </div>
                </div>
            </div>
        </div>
        <div class="form-group">
            <span class="control-label col-md-3"><strong>Số lượng tồn(*)</strong></span>
            <div class="col-md-6">
                @Html.EditorFor(model => model.SoLuongTon, new { htmlAttributes = new { @class = "required form-control" } })
                @Html.ValidationMessageFor(model => model.SoLuongTon)
            </div>
        </div>
        <div class="form-group">
            <span class="control-label col-md-3"><strong>Chủ đề(*)</strong></span>
            <div class="col-md-6">
                @Html.DropDownList("MaChuDe", (SelectList)ViewBag.MaChuDe, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group">
            <span class="control-label col-md-3"><strong>Nhà xuất bản(*)</strong></span>
            <div class="col-md-6">
                @Html.DropDownList("MaNXB", (SelectList)ViewBag.MaNXB, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group">
            <span class="control-label col-md-3"><strong>Mới(*)</strong></span>
            <div class="col-md-6">
                <input type="radio" name="Moi" id="Moi" value="1" checked /> : Mới<br />
                <input type="radio" name="Moi" id="Moi" value="0" /> : Không<br />
                @*@Html.EditorFor(model => model.Moi)
                    @Html.ValidationMessageFor(model => model.Moi)*@
            </div>
        </div>

        <div class="form-group">
            <span class="control-label col-md-3"><strong>Mô tả(*)</strong></span>
            <div class="col-md-6">
                <textarea name="MoTa" id="MoTa" class="required form-control"></textarea>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Thêm" class="btn btn-success" />
            </div>
        </div>
    </div>
}
